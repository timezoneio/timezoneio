$avatarSize            = 60px


box-shadow(depth = 0)
  if depth == 0
    box-shadow: 0 1px 2px rgba(0,0,0,0.1)
  else if depth == 1
    box-shadow: 0 2px 2px rgba(0,0,0,0.26)
  else if depth == 2
    box-shadow: 0 0 2px rgba(0,0,0,.12), 0 2px 4px rgba(0,0,0,.24)

.card
  border-radius: 2px
  box-shadow()
