// Variables

$blue                  = #01579B
$lightBlue             = #558AB2
$teal                  = #1AD5B7
$red                   = rgb(202, 45, 45)
$green                 = #3D7529
$lightGreen            = #C5F5B5

$brandColor            = $blue
$brandColorText        = #fff
$textColor             = rgb(50, 50, 50)
$mutedColor            = rgb(150, 150, 150)
$fillColor             = #E7EDF0 // darker DCE5EB
$lightFillColor        = lighten($fillColor, 50%)
$borderColor           = darken($fillColor, 30%)
$lightBorderColor      = $fillColor
$inputBorderColor      = darken($fillColor, 10%)
$linkColor             = $brandColor
$errorColor            = $red
$errorLightColor       = rgb(255, 226, 226)
$successColor          = $green
$successLightColor     = $lightGreen

$twitter               = #55acee
$gravatar              = #1E8CBE

$avatarSize            = 60px

$borderRadius          = 2px


shadow(depth = 0)
  if depth == 0
    box-shadow: 0 1px 2px rgba(0,0,0,0.1)
  else if depth == 1
    box-shadow: 0 2px 2px rgba(0,0,0,0.26)
  else if depth == 2
    box-shadow: 0 0 2px rgba(0,0,0,.12), 0 2px 4px rgba(0,0,0,.24)
  else if depth == 'none'
    box-shadow: none

.card
  border-radius: $borderRadius
  shadow()
