$headerIconSize = 22px

.site-header
  display: flex
  justify-content: space-between
  align-items: center
  width: 100%
  max-width: 1100px
  padding: 0.5em 1em
  margin: 0 auto


.site-branding
  height: $headerIconSize
  padding-left: $headerIconSize + 6px

  color: $textColor
  font-size: 1em
  line-height: $headerIconSize
  background: url(/images/brand-icon.png) no-repeat left center
  background-size: $headerIconSize $headerIconSize

// Override any link styling
.site-branding-link
  cancelLinkHover()


.site-header--right
  display: flex

  > *
    margin-left: 1em

    &:first-child
      margin-left: 0


// Center it!
.app-sidebar .site-branding
  margin: 0 auto 2em
  width: 124px

.site-header-menu-container
  position: relative

  .header-avatar
    cursor: pointer

.site-header-menu
  display: none
  position: absolute
  right: 0px
  min-width: 6em
  padding: 0.1em
  background: #fff
  box-shadow: 0 1px 2px rgba(0,0,0,0.3)
  font-size: 0.9em
  text-align: right

  // TODO - Add arrow hack

  // TODO - Add some fading
  &.menu-open
    display: block


.site-header-menu-item
  cancelLinkHover()
  display: block
  margin: 0.5em 0.8em;


